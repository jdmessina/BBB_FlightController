/*
 * Import nib
 *
 * Note the lack of vendor
 * prefixes. Nib will add
 * them for us
 *
 */
@import 'nib'

/*
 * Grab a custom font from Google

@import url('http://fonts.googleapis.com/css?family=Quicksand')
 */

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa5b4d
background-color = #faf9f0

/* header style information */
header
    padding             15px 10px
    color               #fff
    font-size           25px
    text-align          center

    /*
     * Note the use of the `main-color`
     * variable and the `darken` function
     */
    background-color    main-color
    border-bottom       1px solid darken(main-color, 30%)
    text-shadow         0px -1px 0px darken(main-color, 30%)

/* general style information */
body
    font-family 'Georgia'
    background-color background-color
    color #444

p
    line-height         1.8

h2
    margin-bottom       5px
    font-size           larger
    font-weight         bold

.users
    margin-top          10px

img
    float               left

/* style for RGraph components */
canvas
    padding             0px
    margin              0px

/*#telemGraph
    width               400px
    height              150px*/

/* style information for the panels */
.panel
    float               left
    height              235px
    border-right        1px solid black
    padding             10px
    overflow            scroll-y

#client     /* client panel */
    border-bottom       1px solid black

#commands   /* commands panel */
    width               400px
    border-bottom       1px solid black

#status     /* status panel */
    height              0px
    border-right        0px

#telemetry  /* telemetry panel */
    width               365px
    height              236px

#flightcontrol     /* gauges panel */
    width               957px
    height              650px
    border-bottom       1px solid black
    margin-top          0px

/* style information for the area listing connected users (client panel) */
#users
    width               150px

/* style information for the command input box (commands panel) */
#data
    width               200px

/* style information for the log file (commands panel) */
#log
    width               400px
    height              160px
    margin              0 0 20px 0
    border              1px solid black
    overflow-y          scroll

/* style information for the buttons (status panel) */
.imgButton
    margin-top          10px
    width               50px
    height              50px
    border              0px
    padding             0px

/*#led
    float               right*/

/* footer style information */
footer
    width               500px
    margin              50px auto
    border-top          1px dotted #ccc
    padding-top         5px
    font-size           13px